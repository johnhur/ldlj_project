  var imagestwo = ["/assets/sports-731506_1920.jpg", "/assets/black-and-white-party-music-club.jpg", "/assets/food-salad-restaurant-person.jpg", "/assets/people-woman-coffee-meeting.jpg"];

  var randomNum = Math.floor(Math.random() * imagestwo.length); 
  console.log(randomNum);

  var randomImage = imagestwo[randomNum];

$("#signup-larger").css("background", "url(" + randomImage + ")");
$("#signup-larger").css("background-size", "cover");
$("#signup-larger").css("background-repeat", "no-repeat"); 
$("#signup-larger").css("width", "100%");
$("#signup-larger").css("height", "");
$("#signup-larger").css("background-size", "contain");

console.log(randomImage);

</script> 



