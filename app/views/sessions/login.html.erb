      <h3>Login</h3>
      <!-- begin login form -->
      <%= form_tag login_path do %>
        <div class="form-group">   
          <div class="label">
            <%= label_tag :email, nil, class:"control-label" %>
          </div>
          
          <%= text_field_tag :email, params[:email], autofocus: true, class:"form-control" %>
      
        <div class="form-group">
          <div class="label":><%= label_tag :password, nil, class:"control-label" %></div>
            <%= password_field_tag :password, params[:password], class:"form-control" %>
        </div>
        
        <p>
        <%= hidden_field_tag 'user_lat' %>
        <%= hidden_field_tag 'user_lng' %>
          <%= submit_tag "Log in", id:"submit-user" %>
        </p>


        <div class="signup-link">
          <%= link_to "Don't have an account? Sign up here", new_user_path %>
        </div>
        <div class="signup-link">
          <%= link_to "Forgot Password?", new_reset_path %>
        </div>
        <% end %>
        <!-- end login form -->

    </div>
